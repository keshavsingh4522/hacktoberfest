import random

def magic8ball():
    response = input("(Press 'any key' for answer and 'quit' to exit)\nWhat is your question?\n")
    Eightball_answers = [
        "It is certain",
        "Outlook good",
        "You may rely on it",
        "Ask again later",
        "Concentrate and ask again",
        "Reply hazy, try again",
        "My reply is no",
        "My sources say no"
        ]
    
    if response == "quit":
        print("Have A Good Day!")
    else:
        print(random.choice(Eightball_answers), "\n")
        magic8ball()

magic8ball()
