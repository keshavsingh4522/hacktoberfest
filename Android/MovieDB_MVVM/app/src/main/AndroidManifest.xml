<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviedbmvvm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movie_app_foreground_foreground"
        android:label="@string/movie_name"
        android:roundIcon="@mipmap/movie_app_foreground_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviedbMVVM">
        <activity android:name="com.example.moviedb_mvvm.MovieDetails.MovieDetailsActivity"></activity>
        <activity android:name="com.example.moviedb_mvvm.MovieDetails.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>