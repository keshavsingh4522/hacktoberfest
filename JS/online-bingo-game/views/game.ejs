<%- include('styles.ejs') %>
<div class="container pt-5" style="padding-bottom: 120px">
  <div class="r-container" id="r-container">
    <div class="reaction" id="reaction"></div>
  </div>
  <div id="pre" class="text-center">
    <h2 id="msg">Waiting for your partner to join the game...</h2>
    <h2>
      Game Code:&nbsp;
      <span id="gCode"><%=code%></span>
      &nbsp;
      <button class="btn btn-primary" id="cpy">
        <i class="fas fa-copy"></i>
      </button>
    </h2>
  </div>
  <div id="game">
    <div class="mt-3 text-center parent">
      <div class="table" id="table">
        <div class="row r">
          <div class="col cell cll">1</div>
          <div class="col cell cll">2</div>
          <div class="col cell cll">3</div>
          <div class="col cell cll">4</div>
          <div class="col cell cll">5</div>
        </div>
        <div class="row r">
          <div class="col cell cll">6</div>
          <div class="col cell cll">7</div>
          <div class="col cell cll">8</div>
          <div class="col cell cll">9</div>
          <div class="col cell cll">10</div>
        </div>
        <div class="row r">
          <div class="col cell cll">11</div>
          <div class="col cell cll">12</div>
          <div class="col cell cll">13</div>
          <div class="col cell cll">14</div>
          <div class="col cell cll">15</div>
        </div>
        <div class="row r">
          <div class="col cell cll">16</div>
          <div class="col cell cll">17</div>
          <div class="col cell cll">18</div>
          <div class="col cell cll">19</div>
          <div class="col cell cll">20</div>
        </div>
        <div class="row r">
          <div class="col cell cll">21</div>
          <div class="col cell cll">22</div>
          <div class="col cell cll">23</div>
          <div class="col cell cll">24</div>
          <div class="col cell cll">25</div>
        </div>
      </div>
    </div>
    <div class="text-center mt-3">
      <h2 id="trnStts"></h2>
      <div class="row">
        <div class="col-lg-6">
          <div class="mt-3">
            Your Bingo Bar
            <div class="row">
              <div class="col" style="justify-content: center; display: flex">
                <ul class="pagination pagination-lg">
                  <li class="page-item">
                    <a class="page-link bbp1" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp1" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp1" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp1" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp1" href="#">&nbsp;</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="mt-3">
            <span id="brnm">Jaat's</span> Bingo Bar
            <div class="row">
              <div class="col" style="justify-content: center; display: flex">
                <ul class="pagination pagination-lg">
                  <li class="page-item">
                    <a class="page-link bbp2" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp2" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp2" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp2" href="#">&nbsp;</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link bbp2" href="#">&nbsp;</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="end" class="text-center" style="display: none">
    <h1 id="end_msg" class="display-1"></h1>
    <% if(type=="host") { %>
    <button class="btn btn-primary" id="restartBtn">
      <i class="fas fa-sync-alt"></i>&nbsp;Restart Game
    </button>
    <% }else{ %>
    <h4>Host can restart the game...</h4>
    <% } %>
    <button class="btn btn-primary" id="endBtn">
      <i class="fas fa-home"></i>&nbsp;Home
    </button>
  </div>
  <div class="fab-btn" id="toggleChat">
    <i class="fas fa-comments" style="font-size: 30px; margin-top: 4px"></i>
    <span
      class="badge badge-secondary badge-pill"
      id="nBadge"
      style="display: none"
    ></span>
  </div>
  <div class="modal fade" id="chat-modal" data-backdrop="static">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Chatting</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
            id="closeChat"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" style="padding: 0; margin: 0">
          <div class="chat-box" id="chat-box">
            <span class="spacer">&nbsp;</span>
          </div>
        </div>
        <div class="modal-footer" style="padding-bottom: 0">
          <div class="form-group" style="width: 100%">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <button class="btn btn-primary" id="reaction-btn">
                  <i class="fas fa-smile-wink"></i>
                </button>
                <button class="btn btn-primary" id="vibrate-btn">
                  <img src="assets/vibrate.svg" style="height: 22px" />
                </button>
              </div>
              <input
                type="text"
                class="form-control"
                placeholder="Type a message"
                id="message"
              />
              <div class="input-group-append" id="send-btn">
                <button type="button" class="btn btn-primary">
                  <i class="fas fa-paper-plane"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('script.ejs') %>
