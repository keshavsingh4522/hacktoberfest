#include <bits/stdc++.h>
using namespace std;

#define ll long long
#define endl '\n'

template <typename T> inline T gcd(T a, T b) { while (b != 0) swap(b, a %= b); return a; }

int main(){
    ios_base::sync_with_stdio(false);cin.tie(0);
	int t;
	cin >> t;
	while(t--){
		ll n, k;
		cin >> n >> k;
		vector<ll> a(n);
		ll sum = 0, s1=0, s2=0;
		for(int i=0; i<n; ++i){
			cin >> a[i];
			sum += a[i];
		}

		sort(a.begin(), a.end());

		for(int i=0; i<n; ++i)
			if(i<k) s1 += a[i];

		for(int i=n-1; i>=0; --i)
			if(i>=n-k) s2 += a[i];
		
		cout << max(abs(sum-2*s1), abs(sum-2*s2)) << endl;
	}
    return 0;
}
