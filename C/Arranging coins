//Arranging coins in the form of staircase
//code done by CODE-ADITI (ADITI DUTTA)
#include<stdio.h>
#include<conio.h>
void main()
{
 int i,j,k,n,m,l;
 clrscr();
 printf("\n no. of coins you have: ");
 scanf("%d", &n);
 m=n;
 for(i=1;i<n;i++)
 {
  if(m>=0)
  {
   m=m-i;
   k=i;
  }
  else
  break;
 }
 for(i=1;i<k;i++)
 {
  printf("\n");
  for(j=1;j<=i;j++)
  printf("o ");
 }
 l=0;
 {
 for(i=1;i<k;i++)
 l=l+i;
 }
 l=n-l;
 if(l!=0)
 {
  printf("\n");
  for(i=1;i<=l;i++)
  printf("o ");
  printf("\n no. of lines printed= %d",k);
  printf("\n last line only contains %d no coins",l);
 }
 else
 printf("\n no. of lines printed= %d",k);
 getch();
}
