#include<stdio.h>
int main()
{
    int a[10],i,n,min,max;
    printf("Enter size of array : ");
    scanf("%d",&n);
    printf("Enter elements in array : ");
    for(i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
    min=max=a[1];
    for(i=1; i<n; i++)
    {
         if(min>a[i])
		  min=a[i];   
		   if(max<a[i])
		    max=a[i];       
    }
     printf("Minimum of array is : %d",min);
          printf("\nMaximum of array is : %d",max);
 
 
    return 0;
}
