#include <math.h>
#include <stdio.h>
int change(int n);
int main() {
  int n;
  printf("Enter a number in decimal : ");
  scanf("%d", &n);
  int m = change(n);
  printf("\nThe number %d in binary is %d", n, m);
}
int change(int n) {
  int dec = 0, i = 1, rem;
  while (n != 0) {
    rem = n % 2;
    n /= 2;
    dec += rem * i;
    i *= 10;
  }
  return dec;
}
